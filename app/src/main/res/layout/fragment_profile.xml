<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- Guidelines для границ -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- Avatar Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <!-- Form Section -->
    <TextView
        android:id="@+id/tv_nameProfile"
        style="@style/CustomTextStyle"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:text="@string/developer"
        app:drawableStartCompat="@drawable/ic_profile_data"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <TextView
        android:id="@+id/tv_emailProfile"
        style="@style/CustomTextStyle"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:text="@string/gmail"
        android:clickable="true"
        android:focusable="true"
        android:textColor="?attr/colorPrimary"
        app:drawableStartCompat="@drawable/ic_email"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameProfile" />

    <TextView
        android:id="@+id/tv_phoneProfile"
        style="@style/CustomTextStyle"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:text="@string/mobile_phone"
        android:autoLink="phone"
        app:drawableStartCompat="@drawable/ic_phone"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_emailProfile" />

    <TextView
        android:id="@+id/tv_git"
        style="@style/CustomTextStyle"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:text="@string/github_daniel"
        android:autoLink="web"
        app:drawableStartCompat="@drawable/ic_github"
        app:layout_constraintEnd_toEndOf="@+id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_phoneProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>