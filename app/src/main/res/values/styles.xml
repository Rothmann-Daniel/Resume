<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- поля ввода текста -->
    <style name="CustomTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/ed_backgroud</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <!-- Bottom Navigation  -->
    <style name="BottomNavigationStyle">
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemBackground">@color/bottom_nav_background_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>